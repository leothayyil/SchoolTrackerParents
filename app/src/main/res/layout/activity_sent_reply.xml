<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardMaxElevation="40sp"
    app:cardBackgroundColor="@color/white"
    tools:context="com.example.user.schooltrackerparents.SentReplyActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SR_toolbar"
        android:background="@color/grey">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="55sp"
        android:padding="10sp"
        android:background="@color/white">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:paddingLeft="20sp"
            android:id="@+id/SR_title"
            android:layout_marginTop="20sp"
            android:text="Title"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SR_message"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:paddingLeft="20sp"
            android:layout_marginTop="20sp"
            android:text="message"
            android:textColor="@android:color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20sp"
            android:layout_height="40sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SR_teacher"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:paddingLeft="20sp"
                android:text="teacher"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SR_date"
                android:layout_gravity="center"
                android:gravity="right"
                android:paddingLeft="20sp"
                android:text="date"
                android:textColor="@android:color/black" />

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="reply"
                    android:id="@+id/SR_edtReply"
                    android:textColor="@color/black"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sent"
                    android:layout_gravity="right"
                    android:id="@+id/SR_btnSent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5sp"
                    android:backgroundTint="@color/green"/>
            </LinearLayout>

        </FrameLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
