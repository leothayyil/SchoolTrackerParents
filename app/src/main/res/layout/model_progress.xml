<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white_grey"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginTop="3sp"
    android:layout_height="50sp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/progress_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/progress_mark"
            android:layout_alignBottom="@+id/progress_mark"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center|left"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="Subject"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/progress_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/progress_status"
            android:layout_alignBottom="@+id/progress_status"
            android:layout_marginEnd="76dp"
            android:layout_marginRight="76dp"
            android:layout_toLeftOf="@+id/progress_status"
            android:layout_toStartOf="@+id/progress_status"
            android:text="mark"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/progress_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="5sp"
            android:text="status"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>